{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@enums/*": ["./types/enums/*"],
      "@lib/*": ["./lib/*"],
    },
    "lib": ["dom", "es5", "es6", "es7"],
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude" : [
    "**/**/node_modules",
    "node_modules",
  ]
}
